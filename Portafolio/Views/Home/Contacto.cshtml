
@{
    ViewData["Titulo"] = "Contacto";
}

<h1>Formulario de @ViewData["Titulo"]</h1>

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="nombre" placeholder="Ingrese su Nombre" />
    </div>
    <div class="mb-3">
        <label for="emnail" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="email" placeholder="nombre@ejemplo.com" />
    </div>
    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea class="form-control" id="Mensaje" name="mensaje" placeholder="mensaje" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>